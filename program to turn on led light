;PROGRAM TO TURN ON LED LIGHT
ORG 0000h
     AJMP MAIN;   ajmp absolte jump ; ISR FOR int1
     ORG 0013H
     CLR P0.0    ; TURN ON LED
    HERE:   JNB P3.3, HERE ; CHECKING THE STATUS OF SWITCH
     SETB P0.0  ; TURN OFF LED
     RETI
     ORG 30h
    MAIN: SETB P3.3
    CLR P0.0
    SETB P0.1
    SETB TCON.2
    MOV IE, #10000100b
    WAIT: SJMP WAIT
    END

